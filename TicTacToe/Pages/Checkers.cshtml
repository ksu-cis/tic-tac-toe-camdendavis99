@page
@model TicTacToe.Pages.CheckersModel
@{
    ViewData["Title"] = "Checkers";
}

<h2>Checkers</h2>

<div id="board">
    @for (int y = 0; y < 8; y++)
    {
        @for (int x = 0; x < 8; x++)
        {
            <div class="square @((x + y) % 2 == 1 ? "black" : "red")">

            </div>
        }
    }
</div>